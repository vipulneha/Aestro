<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Effect -->
    <item>
        <shape>
            <solid android:color="#CC8B00" /> <!-- Darker shade for shadow -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Main Button -->
    <item android:top="2dp" android:left="2dp">
        <shape>
            <solid android:color="#FFD700" /> <!-- Button color -->
            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
                android:color="#FFB400" /> <!-- Lighter border for contrast -->
        </shape>
    </item>
</layer-list>
